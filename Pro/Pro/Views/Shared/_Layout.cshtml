<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Test</title>

    <environment include="Development">
        <link href="~/css/bulma.min.css" rel="stylesheet" />
        <link href="~/css/font-awesome.min.css" rel="stylesheet" />
        <link href="~/css/buefy-0.6.2.min.css" rel="stylesheet" />
        <link href="~/css/materialdesignicons.min.css" rel="stylesheet" />
    </environment>

</head>
<body>
    <nav class="navbar nav-background" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <img src="pic_trulli.jpg" alt="Italian Trulli">
            <div class="navbar-burger burger" data-target="navbarExampleTransparentExample">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
        <div class="navbar-menu" style="color:#33CCFF">
            <div class="navbar-start">
               <h1 class="promotion">Promotion</h1>
            </div>
        </div>
    </nav>
    <div class="columns background ">
        @*ซ้าย*@
        <div class="column is-one-fifth">
            <aside class="menu aside hero is-fullheigth bg-color">
                <ul>
                    <div class="has-text-white">
                        <div class="txt-head" style="background:black"></div>
                        @*<li class="menu-list" style="background-color:#33CCFF">
                            <a href="/Home/Index" class="has-text-white">
                                <div class="txt-padding"></div>
                            </a>
                        </li>*@
                    </div>
                </ul>
            </aside>
        </div>
        @*ขวา*@
        <div class="column is-four-fifths">
            <div class="">
                <section id="app" class="section"></section>
            </div>
        </div>
    </div>



    @RenderBody()

    <style>

        .user-icon {
            font-size: 13px;
        }

        log-position {
            text-align: center;
        }
        .nav-background {
            background-color: #33CCFF;
          
        }
        .promotion {
            font-size: 32px;
            padding-left: 80px;
            color:white;

        }

        .background {
            background-color: #f5f5f5;
            min-height: 100%;
        }

        html, body {
            margin: 0;
            padding: 0;
            height: 100%; /* needed for container min-height */
        }

        .transparent_btn {
            display: inline-block;
            padding: 10px 14px;
            color: #FFF;
            border: 1px solid #424F60;
            text-decoration: none;
            font-size: 14px;
            line-height: 120%;
            background-color: rgba(255,255,255, 0);
            -webkit-transition: background-color 300ms ease;
            -moz-transition: background-color 300ms ease;
            transition: background-color 300ms ease;
            cursor: pointer;
            font-size: 24px;
        }

        .icon-flipped {
            transform: scaleX(-1);
            -moz-transform: scaleX(-1);
            -webkit-transform: scaleX(-1);
            -ms-transform: scaleX(-1);
            color: black;
            font-size: 13px;
        }

        .txt-padding {
            padding-left: 40%;
            font-size: 20px;
            font-family: 'DB-Heavent';
        }

        .txt-head {
            font-size: 15px;
            text-align: center;
            font-family: 'DB-Heavent';
            padding-top: 20px;
        }

        .menu-list a:hover {
            background-color: #26486c !important;
            color: grey;
        }

        .bg-color {
            background-color: #000000;
            min-height: 100%;
        }

        @@font-face {
            font-family: 'DB-Heavent';
            src: url('../../static/fonts/DB-Heavent.ttf') format('truetype');
        }

        button .i {
            font-family: DB-Heavent;
            color: green;
        }

        .menu-list li {
            font-family: 'DB-Heavent';
        }



        @@media screen and (max-width: 500px) {
            .header a {
                float: none;
                display: block;
                text-align: left;
            }

            .header-right {
                float: none;
            }
        }

        .aside-padding {
            padding-left: 5%;
        }
    </style>

    <environment include="Development">
        <script src="~/js/all.js"></script>
        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/vue.js"></script>
        <script src="~/js/buefy.js"></script>
    </environment>

    <script>
        $(document).ready(function () {

            // Check for click events on the navbar burger icon
            $(".navbar-burger").click(function () {

                // Toggle the "is-active" class on both the "navbar-burger" and the "navbar-menu"
                $(".navbar-burger").toggleClass("is-active");
                $(".navbar-menu").toggleClass("is-active");

            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
